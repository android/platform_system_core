cc_binary {
    name: "watchdogd",
    recovery_available: true,
    srcs: ["watchdogd.cpp"],
    cflags: [
        "-Wall",
        "-Wextra",
        "-Werror",
    ],
    shared_libs: [
        "libbase",
        "libfs_mgr",
    ],
    sanitize: {
        misc_undefined: ["signed-integer-overflow"],
    },
}
