cc_defaults {
    name: "fastboot_defaults",

    cflags: [
        "-Wall",
        "-Wextra",
        "-Werror",
        "-Wno-unused-parameter",
        "-Wno-missing-field-initializers",
        "-Wvla",
    ],
    rtti: true,

    clang_cflags: [
        "-Wthread-safety",
    ],
}

cc_binary {
    name: "fastbootd",
    defaults: ["fastboot_defaults"],

    recovery: true,

    srcs: [
        "device/commands.cpp",
        "device/fastboot_device.cpp",
        "device/flashing.cpp",
        "device/main.cpp",
        "device/usb_client.cpp",
        "device/variables.cpp",
    ],

    shared_libs: [
        "libadbd",
        "libasyncio",
        "libext4_utils",
        "libsparse",
        "liblog",
        "android.hardware.boot@1.0",
        "libbootloader_message",
        "libhardware",
        "libhidltransport",
        "libhidlbase",
        "libhwbinder",
        "libbase",
        "libutils",
        "libcutils",
        "libfs_mgr",
    ],

    static_libs: [
        "android.hardware.boot@1.0-impl",
    ],

    runtime_libs: [
        "bootctrl.default",
    ],

    cpp_std: "c++17",
}

